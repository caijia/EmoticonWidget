<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="TabIndicator">
        <attr name="android:textSize" />
        <attr name="ti_divider_width" format="dimension" />
        <attr name="ti_divider_padding" format="dimension" />
        <attr name="ti_divider_color" format="color" />
        <attr name="ti_tab_indicator_color" format="color" />
        <attr name="ti_tab_indicator_width" format="dimension" />
        <attr name="ti_tab_indicator_height" format="dimension" />
        <attr name="ti_tab_background" format="reference" />
        <attr name="ti_tab_padding_horizontal" format="dimension" />
        <attr name="ti_tab_parent_padding_horizontal" format="dimension" />
        <attr name="ti_custom_indicator_id" format="reference" />
        <attr name="ti_tab_mode">
            <enum name="fixed" value="1" />
            <enum name="scroll" value="2" />
        </attr>
        <attr name="ti_indicator_mode">
            <enum name="wrap" value="3" />
            <enum name="fill" value="4" />
        </attr>
        <attr name="ti_select_color" format="color" />
        <attr name="ti_normal_color" format="color" />
    </declare-styleable>

</resources>