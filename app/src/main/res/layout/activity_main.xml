<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <com.caijia.indicator.TabIndicator
        android:id="@+id/tab_indicator"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:textSize="14sp"
        app:ti_tab_mode="fixed"
        app:ti_space="12dp"
        app:ti_tab_indicator_width="24dp"
        app:ti_indicator_mode="wrap"
        app:ti_tab_background="@drawable/selector_solid_229ef8_e5e5e5_r2"
        app:ti_tab_padding_horizontal="0dp"
        app:ti_tab_parent_padding_horizontal="12dp" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>
